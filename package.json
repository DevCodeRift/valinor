{
  "name": "valinor-alliance-monitor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "bot:dev": "cd bot && npm run dev",
    "bot:build": "cd bot && npm run build",
    "bot:start": "cd bot && npm start",
    "start": "node server.js",
    "build:all": "npm run build && npm run bot:build",
    "deploy": "npm run build:all && docker-compose up -d --build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "@apollo/client": "^3.8.8",
    "graphql": "^16.8.1",
    "lucide-react": "^0.294.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21"
  }
}
